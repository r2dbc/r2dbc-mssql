<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd} | %d{HH:mm:ss.SSS} | %-20.20thread | %5p | %logger{25} | %m%n</pattern>
        </encoder>
    </appender>

    <logger name="io.r2dbc.mssql" level="INFO"/>
    <logger name="tc" level="OFF"/> <!-- Test Container/Docker Logging -->
    <logger name="org.testcontainers" level="WARN"/>
    <logger name="io.netty.resolver.dns" level="OFF"/> <!-- Silence native MacOS Resolver Warnings -->
    <logger name="reactor.ipc.netty" level="WARN"/>
    <logger name="stream" level="INFO"/>
    <logger name="test" level="INFO"/>

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
